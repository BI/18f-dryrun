<!--h2>Proposals by organization type</h2-->
<div class="row">
    <div class="page-select columns small-12">
        <label>Select year:</label>
        <span>
            <select id="year-select">
                <option value="2007">2007</option>
                <option value="2008">2008</option>
                <option value="2009">2009</option>
            </select>
        </span>
    </div>
</div>
<div class="row">
    <div id="loading" class="load-in-content" aria-hidden="true">
        <img src="<%= image_path('ajaxloader.gif') %>">
    </div>
    <div id="chartWidth" class="columns small-12">
        <div id="organization-type-sankey">
            <div class="row" style="width: 920px; margin-top: 40px;">
                <div class="text-left columns noMarginB small-4">
                    <h5 class="abel">Organization Type</h5>
                    <span class="filter-container">
                        <span class="filter column_ORGANIZATION_TYPE"></span>
                        <i class="fa fa-times"></i>
                    </span>
                </div>
                <div class="text-center columns noMarginB small-4">
                    <h5 class="abel">Program Area</h5>
                    <span class="filter-container">
                        <span class="filter column_PROGRAM_AREA_NAME"></span>
                        <i class="fa fa-times"></i>
                    </span>
                </div>
                <div class="text-right columns noMarginB small-4">
                    <h5 class="abel">Awards by Organization Type</h5>
                    <span class="filter-container">
                        <span class="filter column_award_organization_type"></span>
                        <i class="fa fa-times"></i>
                    </span>
                </div>
            </div>
        </div>
        <p class="note">Find filtered proposal data below:</p>
    </div>
    <div class="columns small-12">
        <div id="organization-type-table"></div>
    </div>
</div>